<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/white"
  android:orientation="horizontal"
  android:padding="@dimen/dp_15">

  <TextView
    android:id="@+id/tv_withdrawal_application"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableTop="@mipmap/ic_withdrawal_application"
    android:drawablePadding="@dimen/dp_4"
    android:gravity="center"
    android:text="提现申请"
    android:textColor="@color/color_3a3a3a"
    android:textSize="@dimen/sp_14" />

  <TextView
    android:id="@+id/tv_withdrawal_accounts"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableTop="@mipmap/ic_withdrawal_accounts"
    android:drawablePadding="@dimen/dp_4"
    android:gravity="center"
    android:text="提现账款"
    android:textColor="@color/color_3a3a3a"
    android:textSize="@dimen/sp_14" />

  <TextView
    android:id="@+id/tv_revenue_statistics"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableTop="@mipmap/ic_revenue_statistics"
    android:drawablePadding="@dimen/dp_4"
    android:gravity="center"
    android:text="营收统计"
    android:textColor="@color/color_3a3a3a"
    android:textSize="@dimen/sp_14" />

  <TextView
    android:id="@+id/tv_invoice_information"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableTop="@mipmap/ic_invoice_information"
    android:drawablePadding="@dimen/dp_4"
    android:gravity="center"
    android:text="发票信息"
    android:textColor="@color/color_3a3a3a"
    android:textSize="@dimen/sp_14" />

  <TextView
    android:id="@+id/tv_consumption_authority"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableTop="@mipmap/ic_consumption_authority"
    android:drawablePadding="@dimen/dp_4"
    android:gravity="center"
    android:text="消费权限"
    android:textColor="@color/color_3a3a3a"
    android:textSize="@dimen/sp_14" />

</LinearLayout>